      "@poc-workspace/tp-common": ["dist/tp-common/src"],
      "@poc-workspace/tp-core": ["dist/tp-core", "libs/tp-core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
